%main{role: "main"}
  %h1= current_page_title

  - if @lists.blank?
    %p You have no secret santa lists yet!
  %p= link_to "Create a list", new_member_list_path, class: "btn btn-default"

  - if @lists.any?
    %h3 Your Secret Santa lists
    %table
      %thead
        %tr
          %th List Name
          %th.actions Actions
        %tbody
          - @lists.each do |list|
            %tr
              %td= list.name
              %td.actions
                = link_to "View", member_list_path(list), class: "btn btn-small"
                = link_to "Edit", edit_member_list_path(list), class: "btn btn-small"
                = link_to "Delete", member_list_path(list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" }, class: "btn btn-small"
