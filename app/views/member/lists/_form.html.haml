= simple_form_for [:member, @list] do |f|
  = f.input :name, hint: "Name this list, for example: Family Secret Santa"

  %h2 Santas
  #santas
    = f.simple_fields_for :santas do |santa|
      = render "santa_fields", f: santa
    .links
      = link_to_add_association "Add Santa", f, :santas, class: "btn btn-small btn-default"

  .form-actions
    %br
    = f.submit class: "btn btn-default"
    = link_to "Go back", member_dashboard_index_path, class: "btn btn-alt"
