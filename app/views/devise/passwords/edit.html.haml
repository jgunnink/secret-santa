.authentication

  %h2= current_page_title

  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "authentication-form", method: :put }) do |f|

    = f.input :reset_password_token, as: :hidden
    = f.input :password, autofocus: true, autocomplete: "off", label: "New password"
    = f.input :password_confirmation, autocomplete: "off", label: "Confirm new password"
    = f.button :submit, "Change my password"

  = render "devise/shared/links"
